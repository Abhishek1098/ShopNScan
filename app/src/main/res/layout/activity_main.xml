<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cast_intro_overlay_background_color"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/MainActivity_TextView_ItemTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:shadowColor="@color/cast_libraries_material_featurehighlight_text_header_color"
        android:text="TextView"
        android:textAllCaps="false"
        android:textColor="@color/cast_expanded_controller_progress_text_color"
        android:textColorHint="@color/cast_expanded_controller_text_color"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/ui_main_cart"
        app:layout_constraintStart_toStartOf="@+id/ui_main_cart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MainActivity_TextView_TotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:shadowColor="@color/cast_libraries_material_featurehighlight_text_header_color"
        android:text="TextView"
        android:textColor="@color/cast_expanded_controller_progress_text_color"
        android:textColorHint="@color/cast_expanded_controller_text_color"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/ui_main_cart"
        app:layout_constraintEnd_toEndOf="@+id/ui_main_cart"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/ui_main_cart"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/common_google_signin_btn_text_dark_pressed"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465" />

    <LinearLayout
        android:id="@+id/MainActivity_LinearLayout_ButtonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ui_main_cart"
        app:layout_constraintStart_toStartOf="@+id/ui_main_cart"
        app:layout_constraintTop_toBottomOf="@+id/ui_main_cart">

        <Button
            android:id="@+id/ui_main_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/ic_menu_camera"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/ui_main_checkout"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>